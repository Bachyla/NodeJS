<h1>Index page</h1>

{{#if todos.length}}
  <ul>
    {{#each todos}}
      <li>
        <label>
          {{#if completed}}
            <input type="checkbox" checked>
            <span>{{title}}</span>
          {{else}}
            <input type="checkbox">
            <span>{{title}}</span>
          {{/if}}
          <button class="btn btn-small">Save</button>
        </label>
      </li>
    {{/each}}
  </ul>
{{else}}
<p>No todos!</p>
{{/if}}